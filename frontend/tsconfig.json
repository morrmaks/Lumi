{
  "compilerOptions": {
    "outDir": "./dist/",
    "jsx": "react-jsx",
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "es2020",
    "allowJs": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["vite/client", "node"]
    //    "types": ["jest", "@testing-library/jest-dom", "@wdio/globals/types"]
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "include": ["./src/**/*.ts", "./src/**/*.tsx"]
}
